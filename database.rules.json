{
  "rules": {
    "status": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && $uid === auth.uid",
        ".validate": "newData.hasChildren(['state', 'lastChanged']) && (newData.child('state').val() === 'online' || newData.child('state').val() === 'offline')"
      }
    },
    "signals": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$senderUid": {
          ".write": "auth != null && (auth.uid === $uid || (auth.uid === $senderUid && !data.exists()))",
          ".validate": "newData.hasChildren(['fromUid', 'type', 'timestamp']) && newData.child('fromUid').val() === auth.uid && newData.child('timestamp').val() <= now"
        }
      }
    }
  }
}